  "homepage": "",
  "bugs": {
    "url": ""
  },
  "scripts": {
    "prestart": "npm run drop-sqlite-db || true",
    "start": "node main.js",
    "poststart": "npm run create-sqlite-db",
    "dev": "cross-env NODE_ENV=development node main.js",
    "nodemon": "nodemon --exec npm run dev",
    "create-sqlite-db": "shx touch ./db/database.sqlite",
    "drop-sqlite-db": "shx rm ./db/database.sqlite",
    "lint": "eslint ./src/. ./config/. ./test/.",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "production": "cross-env NODE_ENV=production node main.js",
    "test": "mocha",
    "test-ci": "jest --coverage --forceExit"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@sendgrid/mail": "^7.6.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "core-js": "^2.6.9",
    "cors": "^2.8.4",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-routes-mapper": "^1.0.2",
    "helmet": "^3.12.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "mysql2": "^2.3.3",
    "newrelic": "^8.6.0",
    "razorpay": "^2.8.0",
    "sequelize": "^6.0.0"
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "mocha": "^9.1.3",
    "nodemon": "^1.17.3",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  },
  "main": "main.js",
  "directories": {
    "test": "test"
  },
  "description": ""
}